@model Examen.ApplicationCore.Domain.Equipement

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Equipement</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="PhotoEquipement" class="control-label"></label>
                <input type="file" name="PhotoImg" class="form-control" />
                <span asp-validation-for="PhotoEquipement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeEquipement" class="control-label"></label>
                <input asp-for="TypeEquipement" class="form-control" />
                <span asp-validation-for="TypeEquipement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EtatEquipement" class="control-label"></label>
                <select asp-for="EtatEquipement" asp-items="@Html.GetEnumSelectList<Examen.ApplicationCore.Domain.EtatEquipement>()" class="form-control"></select>
                <span asp-validation-for="EtatEquipement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudioFk" class="control-label"></label>
                <select asp-for="StudioFk" asp-items=ViewBag.lsStudio class="form-control"></select>
                <span asp-validation-for="StudioFk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
